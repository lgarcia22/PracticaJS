@using DataEntityLayer.Models.Informes;
@using DataAccessLayer.Util;
<div class="row">
    <div class="col-md-12">
        <p class="encabezado-panel2">Recomendaciones del Informe No. @Model.numeroInforme </p>
    </div>
</div>
