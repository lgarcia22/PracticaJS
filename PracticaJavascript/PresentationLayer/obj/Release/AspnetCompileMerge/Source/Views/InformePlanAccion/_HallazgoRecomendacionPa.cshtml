                                                                .Key("codigoInformeAuditoria", "codigoHallazgo", "codigoRecomendacion", "codigoPa", "codigoPaVersion"))
                                                                .ID("GridRecomendacionHallazgoPa")
                                                                .Editing(ed =>
                                                                {
                                                                    ed.Mode(GridEditMode.Popup);
