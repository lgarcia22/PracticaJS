@(Html.DevExtreme().Popup()
                                .ID("PopObservacion")
                                .Width("55%")
                                .Height("290px")
                                .Visible(false)
                                .CloseOnOutsideClick(false)
                                .Position(pos => pos
                                .My(HorizontalAlignment.Center, VerticalAlignment.Center)
                                .At(HorizontalAlignment.Center, VerticalAlignment.Center)
                                .Of(new JS("window"))).ContentTemplate(new TemplateName("ContenidoObservacionInforme"))
)

@using (Html.DevExtreme().NamedTemplate("ContenidoObservacionInforme"))
{
     @(Html.DevExtreme().ScrollView()
                .ScrollByContent(true)
                .ScrollByThumb(true)
                .Height("100%")
                .ReachBottomText("Updating...")
                .ShowScrollbar(ShowScrollbarMode.OnScroll)
                .Direction(ScrollDirection.Both)
                .ID("scrollView")
                .Content(@<text><div id="ContObservacionInforme" style="padding-right:10px"></div>
                </text>)
        )
}

