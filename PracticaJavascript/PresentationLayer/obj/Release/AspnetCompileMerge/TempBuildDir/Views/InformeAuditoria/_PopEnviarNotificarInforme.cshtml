@(Html.DevExtreme().Popup()
                                .ID("PopEnviarNotificarInforme")
                                .Width("80%")
                                .Height("430px")
                                .Visible(false)
                                .CloseOnOutsideClick(false)
                                .Position(pos => pos
                                .My(HorizontalAlignment.Center, VerticalAlignment.Center)
                                .At(HorizontalAlignment.Center, VerticalAlignment.Center)
                                .Of(new JS("window"))).ContentTemplate(new TemplateName("ContenidoNotificarInforme"))
)

@using (Html.DevExtreme().NamedTemplate("ContenidoNotificarInforme"))
{
    @(Html.DevExtreme().ScrollView()
                .ScrollByContent(true)
                .ScrollByThumb(true)
                .Height("100%")
                .ReachBottomText("Updating...")
                .ShowScrollbar(ShowScrollbarMode.OnScroll)
                .Direction(ScrollDirection.Both)
                .ID("scrollView")
                .Content(@<text><div id="ContNotificarInforme" style="padding-right:10px"></div>
                </text>)
        )
}

