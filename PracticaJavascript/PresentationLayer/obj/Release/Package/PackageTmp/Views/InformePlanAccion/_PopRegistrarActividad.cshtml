@(Html.DevExtreme().Popup()
                                    .ID("PopRegistraActividad")
                                    .Width("1000")
                                    .Height("465px")
                                    .Visible(false)
                                    .CloseOnOutsideClick(false)
                                    .Position(pos => pos
                                    .My(HorizontalAlignment.Center, VerticalAlignment.Center)
                                    .At(HorizontalAlignment.Center, VerticalAlignment.Center)
                                    .Of(new JS("window"))).ContentTemplate(new TemplateName("ContenidoActividad"))
)

@using (Html.DevExtreme().NamedTemplate("ContenidoActividad"))
{
    @(Html.DevExtreme().ScrollView()
                       .ScrollByContent(true)
                       .ScrollByThumb(true)
                       .Height("100%")
                       .ReachBottomText("Updating...")
                       .ShowScrollbar(ShowScrollbarMode.OnScroll)
                       .Direction(ScrollDirection.Both)
                       .ID("scrollView")
                       .Content(@<text><div id="ContActividad" style="padding-right:10px"></div>

                    </text>)
    )
}

